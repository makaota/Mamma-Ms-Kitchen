<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mammaColorLightYellowTheme">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/my_order_details_content_paddingStartEnd"
            android:paddingTop="@dimen/my_order_details_content_paddingTopBottom"
            android:paddingEnd="@dimen/my_order_details_content_paddingStartEnd"
            android:paddingBottom="@dimen/my_order_details_content_paddingTopBottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.makaota.mammamskitchen.utils.RUATextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thank you for using our app!"
                    android:textColor="@color/colorDarkGrey"
                    android:gravity="center"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <com.makaota.mammamskitchen.utils.RUATextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our store is currently closed,\nbut we'll be open and ready to take your orders again during our regular hours. "
                    android:textColor="@color/colorDarkGrey"
                    android:gravity="center"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <com.makaota.mammamskitchen.utils.RUATextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You can place your orders between [Opening Time] and [Closing Time]. We look forward to serving you then! ðŸ›’ðŸ•’"
                    android:textColor="@color/colorDarkGrey"
                    android:gravity="center"
                    android:textSize="15sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/about_us_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="13sp"
                android:textColor="@color/colorThemePink"
                android:background="@android:color/darker_gray"
                android:foreground="?attr/selectableItemBackground"
                android:padding="@dimen/delete_icon_padding"
                android:layout_gravity="right" />
        </LinearLayout>



    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>